    <!-- Content -->
    <div class="content">

        <!-- Image box -->
        <div class="box">
            <button onclick="showImage()">Image</button><br>
            <img id="myImage" src="https://via.placeholder.com/150">
        </div>

        <!-- Empty box (as per design) -->
        <div class="box">
            <p>Content Area</p>
        </div>

        <!-- List box -->
        <div class="box">
            <button onclick="showList()">List</button>
            <ul id="myList">
                <li>Item One</li>
                <li>Item Two</li>
                <li>Item Three</li>
            </ul>
        </div>

        <!-- Color box -->
        <div class="box">
            <button onclick="changeColor()">Color</button>
        </div>

    </div>

